<!DOCTYPE html>
<html lang="id">

<%- include('Component/headfix.ejs') %>

<body class="bg-gray-50">
<%- include('Component/navbarPencari.ejs') %>

<section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Informasi Pemilik Kos</h2>
        
        <% if (ownerInfo) { %>
            <!-- Card Informasi Pemilik -->
            <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
                <div class="flex items-center mb-6">
                    <div class="w-20 h-20 bg-blue-500 rounded-full flex items-center justify-center mr-6">
                        <i class="fas fa-user text-white text-3xl"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800"><%= ownerInfo.name %></h3>
                        <p class="text-gray-600">Pemilik Kos</p>
                    </div>
                </div>

                <!-- Informasi Kontak -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h4 class="font-semibold text-gray-800 mb-2">Nomor Telepon</h4>
                        <p class="text-lg text-blue-600"><%= ownerInfo.phone || 'Tidak tersedia' %></p>
                    </div>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h4 class="font-semibold text-gray-800 mb-2">Total Kos Dimiliki</h4>
                        <p class="text-lg text-green-600"><%= ownerKos.length %> Kos</p>
                    </div>
                </div>

                <!-- Daftar Kos yang Dimiliki -->
                <div class="mb-8">
                    <h4 class="text-xl font-semibold text-gray-800 mb-4">Kos yang Dimiliki</h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <% if (ownerKos && ownerKos.length > 0) { %>
                        <% ownerKos.forEach(kos => { %>
                            <div class="bg-gray-50 p-4 rounded-lg border-l-4 border-blue-500">
                                <h5 class="font-semibold text-gray-800"><%= kos.name %></h5>
                                <p class="text-gray-600 text-sm"><%= kos.address %></p>
                            </div>
                        <% }); %>
                        <% } else { %>
                            <div class="col-span-2 bg-gray-50 p-4 rounded-lg text-center">
                                <p class="text-gray-600">Tidak ada kos yang dimiliki</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Tombol Hubungi -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <!-- Tombol WhatsApp -->
                    <% if (ownerInfo && ownerInfo.phone) { %>
                    <a href="https://wa.me/<%= ownerInfo.phone.replace(/\D/g, '') %>?text=Halo, saya tertarik dengan kos <%= kosName %>. Apakah masih tersedia?" 
                       target="_blank"
                       class="flex-1 bg-green-500 text-white py-3 px-6 rounded-lg hover:bg-green-600 transition-all text-center">
                        <i class="fab fa-whatsapp mr-2"></i>Hubungi via WhatsApp
                    </a>
                    
                    <!-- Tombol Telepon -->
                    <a href="tel:<%= ownerInfo.phone %>" 
                       class="flex-1 bg-blue-500 text-white py-3 px-6 rounded-lg hover:bg-blue-600 transition-all text-center">
                        <i class="fas fa-phone mr-2"></i>Hubungi via Telepon
                    </a>
                    <% } else { %>
                        <div class="flex-1 bg-gray-300 text-gray-600 py-3 px-6 rounded-lg text-center">
                            <i class="fas fa-info-circle mr-2"></i>Nomor telepon tidak tersedia
                        </div>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <!-- Pesan jika data pemilik tidak ditemukan -->
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg text-center">
                <p>Data pemilik kos tidak ditemukan.</p>
            </div>
        <% } %>

        <!-- Tombol Kembali -->
        <div class="text-center">
            <a href="/detailkospencari/<%= kosId %>" class="bg-gray-500 text-white py-2 px-6 rounded-lg hover:bg-gray-600 transition-all">
                <i class="fas fa-arrow-left mr-2"></i>Kembali ke Detail Kos
            </a>
        </div>
    </div>
</section>

<%- include('Component/footer.ejs') %>
</body>
</html>