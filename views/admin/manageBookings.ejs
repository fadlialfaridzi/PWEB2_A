<!DOCTYPE html>
<html lang="id">

<%- include('../Component/headfix.ejs') %>

<body class="bg-gray-50">
<%- include('../Component/navbarAdmin.ejs') %>

    <!-- Manage Bookings Header -->
    <section class="py-8 mt-8">
        <div class="max-w-7xl mx-auto px-4">
            <div class="mb-8">
                <div class="flex justify-between items-center mb-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800 mb-2">
                            <i class="fas fa-calendar-check text-blue-600 mr-2"></i>
                            Kelola Pemesanan
                        </h1>
                        <p class="text-gray-600">Kelola semua pemesanan yang dilakukan oleh pencari</p>
                    </div>
                    <div class="flex space-x-3">
                        <a href="/admin/export/bookings/pdf" class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                            <i class="fas fa-file-pdf mr-2"></i>
                            Export PDF
                        </a>
                        <a href="/admin/export/bookings/csv" class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
                            <i class="fas fa-file-csv mr-2"></i>
                            Export CSV
                        </a>
                    </div>
                </div>
            </div>

            <!-- Bookings Table -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-semibold text-gray-800">Daftar Semua Pemesanan</h2>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Pemesanan
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Kos
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Pencari
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Tanggal Pemesanan
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Aksi
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (bookings && bookings.length > 0) { %>
                                <% bookings.forEach(booking => { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">ID: <%= booking.id %></div>
                                            <div class="text-sm text-gray-500">Rp <%= booking.kos_price %> / <%= booking.kos_payment_type %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900"><%= booking.kos_name %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900"><%= booking.user_name %></div>
                                            <div class="text-sm text-gray-500"><%= booking.user_email %></div>
                                            <div class="text-xs text-gray-400"><%= booking.user_phone %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= new Date(booking.booking_date).toLocaleDateString('id-ID') %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (booking.status === 'pending') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    <i class="fas fa-clock mr-1"></i>
                                                    Pending
                                                </span>
                                            <% } else if (booking.status === 'completed' || booking.status === 'complete') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <i class="fas fa-check-circle mr-1"></i>
                                                    Selesai
                                                </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                    <i class="fas fa-question-circle mr-1"></i>
                                                    <%= booking.status %>
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <% if (booking.status === 'pending') { %>
                                                <button onclick="updateBookingStatus(<%= booking.id %>, 'completed')" class="text-green-600 hover:text-green-900 mr-3">
                                                    <i class="fas fa-check mr-1"></i>
                                                    Selesai
                                                </button>
                                            <% } %>
                                            <button onclick="viewBookingDetails(<%= booking.id %>)" class="text-blue-600 hover:text-blue-900">
                                                <i class="fas fa-eye mr-1"></i>
                                                Detail
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                        Tidak ada pemesanan yang terdaftar
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('../Component/footer.ejs') %>

    <script>
        function updateBookingStatus(bookingId, status) {
            const statusText = status === 'completed' ? 'selesai' : status;
            if (confirm(`Apakah Anda yakin ingin mengubah status pemesanan menjadi ${statusText}?`)) {
                fetch('/admin/bookings/status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        bookingId: bookingId,
                        status: status
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat memperbarui status pemesanan');
                });
            }
        }

        function viewBookingDetails(bookingId) {
            // You can implement a modal or redirect to a detail page
            alert(`Detail pemesanan ID: ${bookingId}\nFitur ini dapat dikembangkan lebih lanjut.`);
        }
    </script>
</body>
</html> 