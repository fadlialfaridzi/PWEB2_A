<!DOCTYPE html>
<html lang="id">

<%- include('../Component/headfix.ejs') %>

<body class="bg-gray-50">
<%- include('../Component/navbarAdmin.ejs') %>

    <!-- Manage Ratings Header -->
    <section class="py-8 mt-8">
        <div class="max-w-7xl mx-auto px-4">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-star text-blue-600 mr-2"></i>
                    Kelola Rating
                </h1>
                <p class="text-gray-600">Kelola semua rating yang diberikan oleh pencari</p>
            </div>

            <!-- Ratings Table -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-semibold text-gray-800">Daftar Semua Rating</h2>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Rating
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Kos
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Pencari
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Komentar
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Tanggal
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Aksi
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (ratings && ratings.length > 0) { %>
                                <% ratings.forEach(rating => { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex text-yellow-400 mr-2">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <i class="fas fa-star <%= i <= rating.rating ? 'text-yellow-400' : 'text-gray-300' %>"></i>
                                                    <% } %>
                                                </div>
                                                <div class="text-sm font-medium text-gray-900">
                                                    <%= rating.rating %>/5
                                                </div>
                                            </div>
                                            <div class="text-xs text-gray-500">ID: <%= rating.id %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900"><%= rating.kos_name %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900"><%= rating.user_name %></div>
                                            <div class="text-sm text-gray-500"><%= rating.user_email %></div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="text-sm text-gray-900 max-w-xs truncate">
                                                <%= rating.comment || 'Tidak ada komentar' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= new Date(rating.created_at).toLocaleDateString('id-ID') %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <button onclick="deleteRating(<%= rating.id %>)" class="text-red-600 hover:text-red-900">
                                                <i class="fas fa-trash mr-1"></i>
                                                Hapus
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                        Tidak ada rating yang terdaftar
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('../Component/footer.ejs') %>

    <script>
        function deleteRating(ratingId) {
            if (confirm('Apakah Anda yakin ingin menghapus rating ini? Tindakan ini tidak dapat dibatalkan.')) {
                fetch(`/admin/ratings/${ratingId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat menghapus rating');
                });
            }
        }
    </script>
</body>
</html> 