<!DOCTYPE html>
<html lang="en">

<%- include('Component/headfix.ejs') %>

<body class="bg-gray-100">
<%- include('Component/navbarPemilik.ejs') %>


    <div class="container mx-auto p-4 max-w-4xl bg-white rounded-lg shadow-lg mt-10 mb-10">
        <h1 class="text-3xl font-semibold mb-6 text-center"><%= kos.name %></h1>

        <!-- Gambar Kos (Carousel) -->
        <div class="mb-6">
            <!-- Carousel Wrapper -->
            <div class="relative flex">
                <!-- Carousel Images -->
                <div class="overflow-hidden relative w-fit">
                    <div class="flex transition-transform duration-500 ease-in-out transform" id="carouselInner">
                        <% if (kos.photos && kos.photos.length > 0) { %>
                            <% kos.photos.forEach((photo, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'block' : 'hidden' %> w-full">
                                    <img src="/uploads/<%= photo %>" class="d-block w-fit h-fit object-cover rounded-3xl" alt="<%= kos.name %>">
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="carousel-item active">
                                <img src="" class="d-block w-full h-auto" alt="<%= kos.name %>">
                            </div>
                        <% } %>
                    </div>
                </div>


                <!-- Carousel Controls -->
                <button class="opacity-20 hover:opacity-100 absolute top-1/2 left-0 transform -translate-y-1/2 p-4 bg-gray-800 text-white rounded-full ml-5" id="prevButton">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>

                <button class="opacity-20 hover:opacity-100 absolute top-1/2 right-0 transform -translate-y-1/2 p-4 bg-gray-800 text-white rounded-full mr-5" id="nextButton">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Form untuk menambah foto carousel -->
        <form action="/detailKos/<%= kos.id %>/addPhotos" method="POST" enctype="multipart/form-data" class="border-2 rounded-3xl justify-between p-4 pr-10 pl-10 mb-4 flex items-center space-x-4">
            <div class="form-group">
                <label for="photos" class="mb-3 block text-sm font-medium text-gray-700">Tambah Foto Carousel</label>
                <!-- Pastikan multiple sudah ada pada input -->
                <input type="file" name="photos" accept="image/*" multiple class="mb-2 form-control mt-1" required />
                <br>
                <small>Minimal 3 foto harus diunggah</small>
            </div>

            <!-- Tombol Submit di samping Input Foto -->
            <button type="submit" class="ml-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Tambah Foto
            </button>
        </form>

        <!-- Google Maps -->
        <div class="mb-6">
            <h2 class="text-xl font-semibold">Lokasi Kos</h2>
             <div id="map" style="height: 400px;"></div>
        </div>

        <!-- Deskripsi Kos -->
        <div class="mb-4 border-2 p-4 rounded-3xl">
            <h2 class="text-xl font-semibold mb-2">Deskripsi Kos</h2>
            <p class="text-gray-700"><%= kos.description %></p>
        </div>

        <!-- Fasilitas Kos -->
        <div class="mb-4 border-2 p-4 rounded-3xl">
            <h2 class="text-xl font-semibold mb-2">Fasilitas Kos</h2>
            <ul class="list-disc pl-5">
                <% fasilitas.forEach(fasilitas => { %>
                    <li><%= fasilitas.fasilitas %></li>
                <% }) %>
            </ul>
        </div>

        <!-- Tipe Pembayaran dan Harga Kos -->
        <div class="mb-4 border-2 p-4 rounded-3xl">
            <h2 class="text-xl font-semibold mb-2">Informasi Kos</h2>
            <p class="mb-2"><strong>Tipe Pembayaran:</strong> <%= kos.payment_type === 'perbulan' ? 'Perbulan' : 'Pertahun' %></p>
            <p class="mb-2"><strong>Harga Kos:</strong> Rp <%= kos.price %> / <%= kos.payment_type === 'perbulan' ? 'bulan' : 'tahun' %></p>
        </div>

        

        <!-- Button  -->
        <div class="border-2 flex justify-between p-4 rounded-2xl">
            <!-- Tombol Edit dan Hapus disebelah kiri -->
            <div class="flex gap-x-4">
                <!-- Edit Button -->
                <a href="/editKos/<%= kos.id %>" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                    Edit
                </a>

                <!-- Hapus Button -->
                <form action="/hapusKos/<%= kos.id %>" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus kos ini?');">
                    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
                        Hapus
                    </button>
                </form>
            </div>

            <!-- Tombol Back disebelah kanan -->
            <div class="flex justify-end">
                <a href="/indexPemilikKos" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-gray-700">
                    Back
                </a>
            </div>
        </div>
    </div>

    <script>
        // Inisialisasi Google Maps
        function initMap() {
            const location = {
                lat: <%= kos.latitude ? kos.latitude : 'null' %>, 
                lng: <%= kos.longitude ? kos.longitude : 'null' %>
            };

            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 15,
                center: location,
            });
            new google.maps.Marker({
                position: location,
                map: map,
            });
        }

        // Menjalankan peta setelah halaman dimuat
        window.initMap = initMap;

        const prevButton = document.getElementById('prevButton');
    const nextButton = document.getElementById('nextButton');
    const carouselInner = document.getElementById('carouselInner');
    const items = carouselInner.children;
    let currentIndex = 0;

    // Fungsi untuk menampilkan gambar sesuai dengan index
    const showImage = (index) => {
        // Menyembunyikan semua gambar
        Array.from(items).forEach(item => {
            item.classList.add('hidden');
        });

        // Menampilkan gambar sesuai dengan index
        items[index].classList.remove('hidden');
    };

    // Fungsi untuk menggeser gambar sebelumnya
    prevButton.addEventListener('click', () => {
        currentIndex = currentIndex === 0 ? items.length - 1 : currentIndex - 1;
        showImage(currentIndex);
    });

    // Fungsi untuk menggeser gambar selanjutnya
    nextButton.addEventListener('click', () => {
        currentIndex = currentIndex === items.length - 1 ? 0 : currentIndex + 1;
        showImage(currentIndex);
    });

    // Menampilkan gambar pertama
    showImage(currentIndex);

    </script>

    
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBx9UJ53-dhtrJQ0d31MAkwXeNozDcrWOA&callback=initMap" async></script>
<%- include('Component/footer.ejs') %>
</body>


</html>
