<%- include('../partials/header') %>

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Daftar Kos Anda</h1>

  <% if (kosList.length === 0) { %>
    <p class="text-gray-600">Belum ada kos yang ditambahkan.</p>
  <% } %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% kosList.forEach(kos => { %>
      <div class="bg-white p-4 rounded shadow">
        <h2 class="text-lg font-semibold mb-2"><%= kos.nama %></h2>
        <p><strong>Alamat:</strong> <%= kos.alamat %></p>
        <p><strong>Status:</strong> 
          <span class="<%= kos.tersedia ? 'text-green-600' : 'text-red-600' %> font-medium">
            <%= kos.tersedia ? 'Tersedia' : 'Tidak Tersedia' %>
          </span>
        </p>

        <form action="/owner/kos/<%= kos._id %>/toggle-availability" method="POST" class="mt-3">
          <button class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
            Tandai sebagai <%= kos.tersedia ? 'Tidak Tersedia' : 'Tersedia' %>
          </button>
        </form>
      </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer') %>
