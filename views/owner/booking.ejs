<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>KOSAND</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white font-sans">

  <!-- Header -->
  <header>
    <div class="bg-blue-400 px-6 py-3 flex items-center justify-between">
      <div class="font-bold text-black text-xl">KOSAND</div>
      <nav class="space-x-8 text-black text-sm font-medium">
        <a href="#" class="hover:underline">Beranda</a>
        <a href="#" class="hover:underline">Katalog</a>
        <a href="#" class="hover:underline">Tentang</a>
        <a href="#" class="hover:underline">Kontak</a>
      </nav>
    </div>
    <div class="bg-blue-600 px-6 py-2 flex justify-between text-black">
      <button aria-label="Home">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 fill-black" viewBox="0 0 24 24"><path d="M12 3l-8 8v10h5v-6h6v6h5v-10l-8-8z"/></svg>
      </button>
      <button aria-label="User Profile">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 fill-black" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
      </button>
    </div>
  </header>

  <!-- Main content -->
  <main class="max-w-5xl mx-auto mt-10 space-y-6 px-4">

    <!-- ðŸ” Form Search -->
    <form method="get" action="/owner/booking-page" class="flex mb-6 gap-4">
      <input
        type="text"
        name="search"
        placeholder="Cari nama kos / penyewa..."
        value="<%= search || '' %>"
        class="flex-grow border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-blue-400"
      />
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
        Cari
      </button>
    </form>

    <% if (bookings.length === 0) { %>
      <p class="text-center text-gray-500">Tidak ditemukan hasil untuk pencarian ini.</p>
    <% } %>

    <% bookings.forEach(booking => { %>
    <section class="flex border border-gray-300 p-4 space-x-6">
      <div class="w-32 h-24 border border-gray-400 bg-gray-100 flex items-center justify-center text-gray-400">
        <% if (booking.gambar) { %>
          <img src="/images/<%= booking.gambar %>" alt="<%= booking.nama_kos %>" class="w-full h-full object-cover">
        <% } else { %>
          <span>Image</span>
        <% } %>
      </div>
      <div class="flex-grow flex flex-col justify-between">
        <div>
          <h2 class="font-bold text-lg"><%= booking.nama_kos %></h2>
          <p class="font-semibold">Disewa oleh: <%= booking.nama_penyewa %></p>
          <p class="text-sm text-gray-600">Tanggal booking: <%= booking.tanggal_booking.toISOString().split('T')[0] %></p>
        </div>
        <div class="font-bold text-sm text-gray-700"><%= booking.info %></div>
      </div>
      <div class="flex flex-col justify-between items-end space-y-1">
        <span class="font-bold text-lg">IDR <%= booking.harga.toLocaleString() %></span>
        <button class="bg-blue-500 text-black font-bold rounded-full px-4 py-1 hover:bg-blue-600 transition">
          Kos Telah di Booking
        </button>
      </div>
    </section>
    <% }); %>
  </main>

</body>
</html>
