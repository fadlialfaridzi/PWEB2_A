<!-- ownerProfile.ejs -->
<!DOCTYPE html>
<html lang="id">
<%- include('Component/headfix.ejs') %>

<body class="bg-gray-50">
    <%- include('Component/navbarPemilik.ejs') %>

    <section class="py-12 bg-white">
        <div class="max-w-[85rem] mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Profil Pemilik Kos</h2>

            <!-- Daftar Kos Milik Pemilik -->
            <% if (kosList.length > 0) { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% kosList.forEach(kos => { %>
                        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                            <div class="h-48 bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center">
                                <% if (kos.photos && kos.photos.length > 0) { %>
                                    <img src="/uploads/<%= kos.photos[0] %>" alt="<%= kos.name %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <i class="fas fa-home text-white text-6xl"></i>
                                <% } %>
                            </div>
                            <div class="p-6">
                                <h4 class="text-xl font-semibold text-gray-800 mb-2"><%= kos.name %></h4>
                                <p class="text-gray-600 mb-3"><i class="fas fa-map-marker-alt text-blue-500 mr-2"></i><%= kos.address %></p>
                                <p class="text-2xl font-bold text-blue-600 mb-3">Rp <%= kos.price %> / <%= kos.payment_type %></p>
                                <a href="/detailKos/<%= kos.id %>" class="text-blue-600 hover:text-blue-800">Lihat Detail</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-gray-600">Belum ada kos yang terdaftar.</p>
            <% } %>
        </div>
    </section>

    <%- include('Component/footer.ejs') %>
</body>
</html>
