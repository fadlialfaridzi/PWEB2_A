<!DOCTYPE html>
<html lang="id">

<%- include('Component/headfix.ejs') %>

<body class="bg-gray-50">
    <!-- Navbar berdasarkan role user -->
    <% if (user.role === 'pencari') { %>
        <%- include('Component/navbarPencari.ejs') %>
    <% } else if (user.role === 'pemilik') { %>
        <%- include('Component/navbarPemilik.ejs') %>
    <% } %>

    <!-- Profile Section -->
    <section class="py-12 bg-white">
        <div class="max-w-4xl mx-auto px-4">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">Profile Saya</h1>
                <p class="text-gray-600">Kelola informasi profil Anda</p>
            </div>

            <!-- Success/Error Messages -->
            <% if (successMessage) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
                    <p><%= successMessage %></p>
                </div>
            <% } %>

            <% if (errorMessage) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                    <p><%= errorMessage %></p>
                </div>
            <% } %>

            <!-- Profile Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <!-- Profile Header -->
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-8 py-6">
                    <div class="flex items-center">
                        <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mr-6">
                            <i class="fas fa-user text-blue-600 text-3xl"></i>
                        </div>
                        <div class="text-white">
                            <h2 class="text-2xl font-bold"><%= user.name %></h2>
                            <p class="text-blue-100 capitalize"><%= user.role %></p>
                        </div>
                    </div>
                </div>

                <!-- Profile Information -->
                <div class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <!-- Personal Information -->
                        <div class="space-y-4">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Informasi Pribadi</h3>
                            
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Nama Lengkap</label>
                                <p class="text-lg text-gray-900"><%= user.name %></p>
                            </div>

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                                <p class="text-lg text-gray-900"><%= user.email %></p>
                            </div>

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Nomor Telepon</label>
                                <p class="text-lg text-gray-900"><%= user.phone %></p>
                            </div>

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                                <p class="text-lg text-gray-900 capitalize"><%= user.role %></p>
                            </div>
                        </div>

                        <!-- Account Information -->
                        <div class="space-y-4">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Informasi Akun</h3>
                            
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="block text-sm font-medium text-gray-700 mb-1">ID User</label>
                                <p class="text-lg text-gray-900"><%= user.id %></p>
                            </div>

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Status Akun</label>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <i class="fas fa-check-circle mr-1"></i>Aktif
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                        <a href="/editProfile" class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition-all text-center">
                            <i class="fas fa-edit mr-2"></i>Edit Profile
                        </a>
                        
                        <a href="/changePassword" class="flex-1 bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 transition-all text-center">
                            <i class="fas fa-key mr-2"></i>Ganti Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="text-center mt-8">
                <% if (user.role === 'pencari') { %>
                    <a href="/indexPencariKos" class="bg-gray-500 text-white py-2 px-6 rounded-lg hover:bg-gray-600 transition-all">
                        <i class="fas fa-arrow-left mr-2"></i>Kembali ke Beranda
                    </a>
                <% } else if (user.role === 'pemilik') { %>
                    <a href="/indexPemilikKos" class="bg-gray-500 text-white py-2 px-6 rounded-lg hover:bg-gray-600 transition-all">
                        <i class="fas fa-arrow-left mr-2"></i>Kembali ke Beranda
                    </a>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('Component/footer.ejs') %>
</body>
</html> 