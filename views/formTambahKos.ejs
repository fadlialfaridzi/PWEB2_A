<!DOCTYPE html>
<html lang="en">

<%- include('Component/headfix.ejs') %>
<%- include('Component/navbarPemilik.ejs') %>

<main class="flex-grow">
<body class="bg-gray-100 justify-center min-h-screen">
    <div class="mt-8 container mx-auto p-4 max-w-4xl bg-white rounded-lg shadow-lg">
        <h1 class="text-3xl font-semibold mb-6 text-center">Tambah Kos Baru</h1>

        <form action="/tambahKos" method="POST" enctype="multipart/form-data">
            <!-- Nama Kos -->
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-700">Nama Kos</label>
                <input type="text" name="name" id="name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>

            <!-- Harga Kos -->
            <div class="mb-4">
                <label for="price" class="block text-sm font-medium text-gray-700">Harga Kos</label>
                <input type="number" name="price" id="price" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" required>
            </div>

            <!-- Tipe Kos -->
            <div class="mb-4">
                <label for="tipe_kos" class="block text-sm font-medium text-gray-700">Tipe Kos</label>
                <select name="tipe_kos" id="tipe_kos" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md">
                    <option value="putra">Putra</option>
                    <option value="putri">Putri</option>
                </select>
            </div>

            <!-- Tipe Pembayaran Kos -->
            <div class="mb-4">
                <label for="paymentType" class="block text-sm font-medium text-gray-700">Tipe Pembayaran</label>
                <select name="paymentType" id="paymentType" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md">
                    <option value="perbulan">Perbulan</option>
                    <option value="pertahun">Pertahun</option>
                </select>
            </div>

            <!-- Fasilitas Kos (Checklist) -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Fasilitas Kos</label>
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                    <% const fasilitas = ['Wifi', 'Dapur', 'Token per Kemar', 'Lemari', 'AC', 'Ruang Tamu', 'Air Gratis', 'Meja Belajar', 'Kamar Mandi Dalam', 'CCTV', 'Kasur']; %>
                    <% fasilitas.forEach(f => { %>
                        <div class="flex items-center">
                            <input type="checkbox" name="facilities[]" value="<%= f %>" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <label class="ml-2 text-sm text-gray-700"><%= f %></label>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- Deskripsi Kos -->
            <div class="mb-4">
                <label for="description" class="block text-sm font-medium text-gray-700">Deskripsi Kos</label>
                <textarea name="description" id="description" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" required></textarea>
            </div>

            <!-- Foto Kos (Maksimal 5 Foto) -->
            <div class="mb-4">
                <label for="photos" class="block text-sm font-medium text-gray-700">Foto Kos</label>
                <input type="file" name="photos" id="photos" accept="image/*" multiple class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>

            <!-- Alamat Kos -->
            <div class="mb-4">
                <label for="address" class="block text-sm font-medium text-gray-700">Alamat Kos</label>
                <textarea name="address" id="address" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" required></textarea>
            </div>

            <!-- Lokasi Kos -->
            <div class="mb-4">
                <label for="location" class="block text-sm font-medium text-gray-700">Lokasi Kos (Pilih di Peta)</label>
                <div id="map" class="w-full h-64 mb-3"></div>
                <input type="hidden" name="latitude" id="latitude">
                <input type="hidden" name="longitude" id="longitude">
            </div>

            <!---Button  -->
        <div class="border-2 flex justify-between p-4 rounded-2xl">
    
            <!-- Back Button -->
            <div class="flex justify-end">
                <a href="/indexPemilikKos" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-gray-700">Back</a>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Simpan Kos</button>
            </div>
        </div>
            
        </form>
    </div>
    </main>
    <%- include('Component/footer.ejs') %>

    <script>
        let map, marker;

        // Inisialisasi Google Map
        function initMap() {
            const initialLocation = { lat: -0.914518, lng: 100.459526 };  // Lokasi UNAND Padang
            map = new google.maps.Map(document.getElementById("map"), {
                zoom: 15,
                center: initialLocation,
            });

            // Menambahkan marker pada peta
            marker = new google.maps.Marker({
                position: initialLocation,
                map: map,
                draggable: true, // Memungkinkan pengguna untuk menarik marker
            });

            // Update koordinat latitude dan longitude saat marker dipindahkan
            google.maps.event.addListener(marker, 'dragend', function () {
                const position = marker.getPosition();
                document.getElementById('latitude').value = position.lat();
                document.getElementById('longitude').value = position.lng();
            });
        }

        // Menjalankan peta setelah halaman dimuat
        window.initMap = initMap;
    </script>
</body>



</html>
