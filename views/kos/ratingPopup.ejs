<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Kasih Rating & Review</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/tailwind.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100 flex flex-col items-center justify-center min-h-screen space-y-10">

  <!-- Box Berikan Rating -->
  <div class="bg-white w-full max-w-sm rounded-xl shadow-md p-6 text-center">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Berikan Rating:</h2>
    
    <div id="ratingStars" class="flex justify-center space-x-2 mb-4">
      <% for(let i = 1; i <= 5; i++) { %>
        <button class="star text-3xl transition" data-value="<%= i %>">
          <i class="fas fa-star text-gray-300"></i>
        </button>
      <% } %>
    </div>

    <button class="bg-gray-300 hover:bg-gray-400 text-sm font-semibold px-4 py-2 rounded">Simpan</button>
  </div>

  <!-- Box Tulis Review -->
  <div class="bg-white w-full max-w-sm rounded-xl shadow-md p-6 text-center">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Tulis Review:</h2>
    
    <textarea rows="4" class="w-full border border-gray-300 rounded p-3 mb-4 resize-none" placeholder="Tulis pengalaman kamu..."></textarea>
    
    <button class="bg-gray-300 hover:bg-gray-400 text-sm font-semibold px-4 py-2 rounded">Simpan</button>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const stars = document.querySelectorAll(".star");
      stars.forEach((star, index) => {
        star.addEventListener("click", () => {
          const rating = index + 1;
          stars.forEach((s, i) => {
            const icon = s.querySelector("i");
            if (i < rating) {
              icon.classList.add("text-yellow-400");
              icon.classList.remove("text-gray-300");
            } else {
              icon.classList.add("text-gray-300");
              icon.classList.remove("text-yellow-400");
            }
          });
        });
      });
    });
  </script>
</body>
</html>