<!DOCTYPE html>
<html>
<head>
  <title>Kelola Kategori Fasilitas Kos</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-3xl mx-auto bg-white p-6 rounded-xl shadow-md">
    <h1 class="text-2xl font-bold mb-4">Kelola Kategori Fasilitas Kos</h1>
    
    <form class="flex gap-2 mb-4">
      <input type="text" placeholder="Tambah fasilitas baru..." class="border rounded px-3 py-2 w-full">
      <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Tambah</button>
    </form>

    <table class="w-full text-left border">
      <thead class="bg-gray-200">
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2">Nama Fasilitas</th>
          <th class="px-4 py-2">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% fasilitas.forEach(f => { %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= f.id %></td>
            <td class="px-4 py-2"><%= f.nama %></td>
            <td class="px-4 py-2 flex gap-2">
              <button class="text-sm text-white bg-yellow-500 px-3 py-1 rounded hover:bg-yellow-600">Edit</button>
              <button class="text-sm text-white bg-red-500 px-3 py-1 rounded hover:bg-red-600">Hapus</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
