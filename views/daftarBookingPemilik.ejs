<!DOCTYPE html>
<html lang="id">

<%- include('Component/headfix.ejs') %>

<body class="bg-gray-50">
<%- include('Component/navbarPemilik.ejs') %>

<section class="py-12 bg-white">
    <div class="max-w-[85rem] mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-800 mb-4 text-center">Daftar Booking Kos</h2>

        <!-- Menampilkan pesan sukses -->
        <% if (successMessage) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg text-center mb-6">
                <p><%= successMessage %></p>
            </div>
        <% } %>

        <!-- Menampilkan pesan jika tidak ada booking -->
        <% if (bookings.length === 0) { %>
            <div class="bg-yellow-200 text-yellow-800 p-4 rounded-lg text-center">
                <p>Belum ada booking untuk kos Anda</p>
            </div>
        <% } else { %>
            <!-- Menampilkan Daftar Booking -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <% bookings.forEach((booking) => { %>
                    <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-blue-500">
                        <!-- Header dengan nama kos -->
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-xl font-semibold text-gray-800"><%= booking.kos_name %></h3>
                            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                                Booking #<%= booking.id %>
                            </span>
                        </div>

                        <!-- Status Badge -->
                        <div class="mb-4">
                            <% if (booking.status === 'pending') { %>
                                <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">
                                    Pending
                                </span>
                            <% } else if (booking.status === 'complete') { %>
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">
                                    Complete
                                </span>
                            <% } %>
                        </div>

                        <!-- Informasi Pencari -->
                        <div class="bg-gray-50 p-4 rounded-lg mb-4">
                            <h4 class="font-semibold text-gray-800 mb-2">Informasi Pencari:</h4>
                            <p class="text-gray-600 mb-1">
                                <i class="fas fa-user mr-2 text-blue-500"></i>
                                <strong>Nama:</strong> <%= booking.user_name %>
                            </p>
                            <p class="text-gray-600 mb-1">
                                <i class="fas fa-phone mr-2 text-blue-500"></i>
                                <strong>Telepon:</strong> <%= booking.user_phone %>
                            </p>
                            <p class="text-gray-600">
                                <i class="fas fa-envelope mr-2 text-blue-500"></i>
                                <strong>Email:</strong> <%= booking.user_email %>
                            </p>
                        </div>

                        <!-- Informasi Booking -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="bg-blue-50 p-3 rounded-lg">
                                <p class="text-sm text-gray-600">Tanggal Booking</p>
                                <% 
                                    const bookingDate = new Date(booking.booking_date);
                                    const formattedDate = bookingDate.toLocaleDateString('id-ID', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    });
                                %>
                                <p class="font-semibold text-blue-600"><%= formattedDate %></p>
                            </div>
                            <div class="bg-green-50 p-3 rounded-lg">
                                <p class="text-sm text-gray-600">Harga Kos</p>
                                <p class="font-semibold text-green-600">Rp <%= booking.kos_price %> / <%= booking.kos_payment_type %></p>
                            </div>
                        </div>

                        <!-- Alamat Kos -->
                        <div class="mb-4">
                            <p class="text-gray-600 mb-1">
                                <i class="fas fa-map-marker-alt text-blue-500 mr-2"></i>
                                <strong>Alamat:</strong>
                            </p>
                            <p class="text-gray-800"><%= booking.kos_address %></p>
                        </div>

                        <!-- Tombol Aksi -->
                        <div class="flex flex-col sm:flex-row gap-3">
                            <!-- Tombol Hubungi Pencari -->
                            <a href="https://wa.me/<%= booking.user_phone.replace(/\D/g, '') %>?text=Halo <%= booking.user_name %>, terima kasih telah membooking kos <%= booking.kos_name %>. Apakah ada yang ingin ditanyakan?" 
                               target="_blank"
                               class="flex-1 text-center bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 transition-all">
                                <i class="fab fa-whatsapp mr-2"></i>Hubungi via WhatsApp
                            </a>
                            
                            <!-- Tombol Telepon -->
                            <a href="tel:<%= booking.user_phone %>" 
                               class="flex-1 text-center bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition-all">
                                <i class="fas fa-phone mr-2"></i>Hubungi via Telepon
                            </a>
                            
                            <!-- Tombol Complete (hanya untuk status pending) -->
                            <% if (booking.status === 'pending') { %>
                                <form action="/completeBooking/<%= booking.id %>" method="POST" class="flex-1">
                                    <button type="submit" 
                                            onclick="return confirm('Apakah Anda yakin ingin menandai booking ini sebagai complete?')"
                                            class="w-full bg-purple-500 text-white py-2 px-4 rounded-lg hover:bg-purple-600 transition-all">
                                        <i class="fas fa-check mr-2"></i>Mark as Complete
                                    </button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</section>

<%- include('Component/footer.ejs') %>
</body>
</html>