<!DOCTYPE html>
<html lang="id">

<%- include('Component/headfix.ejs') %>

<body class="bg-gray-50">
    <%- include('Component/navbarPencari.ejs') %>

    <!-- Success/Error Messages -->
    <% if (successMessage) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mx-4 mt-4">
            <p><%= successMessage %></p>
        </div>
    <% } %>

    <% if (errorMessage) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mx-4 mt-4">
            <p><%= errorMessage %></p>
        </div>
    <% } %>

    <!-- Favorites Section -->
    <section class="py-12 bg-white">
        <div class="max-w-[85rem] mx-auto px-4">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-heart text-red-500 mr-3"></i>Kos Favorit Saya
                </h1>
                <p class="text-gray-600">Daftar kos yang telah Anda tandai sebagai favorit</p>
            </div>

            <!-- Favorites Count -->
            <div class="mb-6 text-center">
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                    <i class="fas fa-list mr-1"></i>
                    <%= favorites.length %> kos favorit
                </span>
            </div>

            <!-- Favorites Grid -->
            <% if (favorites && favorites.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% favorites.forEach(kos => { %>
                        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                            <!-- Kos Image -->
                            <div class="h-48 bg-gradient-to-r from-blue-400 to-blue-600 relative">
                                <% if (kos.photos && kos.photos.length > 0) { %>
                                    <img src="/uploads/<%= kos.photos[0] %>" alt="<%= kos.name %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <div class="flex items-center justify-center h-full">
                                        <i class="fas fa-home text-white text-4xl"></i>
                                    </div>
                                <% } %>
                                
                                <!-- Favorite Badge -->
                                <div class="absolute top-3 right-3">
                                    <span class="bg-red-500 text-white px-2 py-1 rounded-full text-xs">
                                        <i class="fas fa-heart mr-1"></i>Favorit
                                    </span>
                                </div>

                                <!-- Rating Badge -->
                                <% if (kos.average_rating > 0) { %>
                                    <div class="absolute top-3 left-3">
                                        <span class="bg-yellow-500 text-white px-2 py-1 rounded-full text-xs">
                                            <i class="fas fa-star mr-1"></i><%= kos.average_rating.toFixed(1) %>
                                        </span>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Kos Information -->
                            <div class="p-6">
                                <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= kos.name %></h3>
                                <p class="text-gray-600 mb-2 text-sm">
                                    <i class="fas fa-map-marker-alt text-blue-500 mr-1"></i>
                                    <%= kos.address %>
                                </p>
                                <p class="text-2xl font-bold text-blue-600 mb-3">
                                    Rp <%= kos.price %> / <%= kos.payment_type %>
                                </p>
                                
                                <!-- Type Badge -->
                                <div class="mb-3">
                                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full uppercase">
                                        <%= kos.tipe_kos %>
                                    </span>
                                </div>

                                <!-- Facilities -->
                                <% if (kos.facilities && kos.facilities.length > 0) { %>
                                    <div class="mb-4">
                                        <h4 class="text-sm font-semibold text-gray-700 mb-2">Fasilitas:</h4>
                                        <div class="flex flex-wrap gap-1">
                                            <% kos.facilities.slice(0, 3).forEach(facility => { %>
                                                <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                                                    <%= facility %>
                                                </span>
                                            <% }); %>
                                            <% if (kos.facilities.length > 3) { %>
                                                <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                                                    +<%= kos.facilities.length - 3 %> lagi
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>

                                <!-- Owner Info -->
                                <div class="mb-4 p-3 bg-gray-50 rounded-lg">
                                    <p class="text-sm text-gray-600">
                                        <i class="fas fa-user mr-1"></i>
                                        <strong>Pemilik:</strong> <%= kos.owner_name %>
                                    </p>
                                    <p class="text-sm text-gray-600">
                                        <i class="fas fa-phone mr-1"></i>
                                        <strong>Kontak:</strong> <%= kos.owner_phone %>
                                    </p>
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex gap-2">
                                    <a href="/detailkospencari/<%= kos.id %>" 
                                       class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-all text-center text-sm">
                                        <i class="fas fa-eye mr-1"></i>Lihat Detail
                                    </a>
                                    <button onclick="removeFromFavorites(<%= kos.id %>)" 
                                            class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition-all text-sm">
                                        <i class="fas fa-heart-broken"></i>
                                    </button>
                                </div>

                                <!-- Favorited Date -->
                                <div class="mt-3 text-xs text-gray-500 text-center">
                                    <i class="fas fa-clock mr-1"></i>
                                    Ditambahkan: <%= new Date(kos.favorited_at).toLocaleDateString('id-ID') %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="text-center py-12">
                    <div class="mb-6">
                        <i class="fas fa-heart text-gray-300 text-6xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-600 mb-2">Belum Ada Kos Favorit</h3>
                    <p class="text-gray-500 mb-6">Anda belum menambahkan kos ke dalam daftar favorit</p>
                    <a href="/indexPencariKos" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition-all">
                        <i class="fas fa-search mr-2"></i>Cari Kos Sekarang
                    </a>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('Component/footer.ejs') %>

    <script>
        // Function to remove from favorites
        function removeFromFavorites(kosId) {
            if (confirm('Apakah Anda yakin ingin menghapus kos ini dari favorit?')) {
                fetch(`/favorites/${kosId}/remove`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Reload page to update the list
                        location.reload();
                    } else {
                        alert('Gagal menghapus dari favorit: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat menghapus dari favorit');
                });
            }
        }

        // Auto-hide success/error messages after 5 seconds
        setTimeout(() => {
            const messages = document.querySelectorAll('.bg-green-100, .bg-red-100');
            messages.forEach(message => {
                message.style.display = 'none';
            });
        }, 5000);
    </script>
</body>
</html> 